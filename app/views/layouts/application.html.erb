<!DOCTYPE html>
<html>
  <head>
    <title>FullCircle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button
          type="button"
          class="navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#full-circle-navbar">
        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
      </button>
      <span
      class="glyphicon glyphicon-dashboard navbar-brand"
      aria-hidden="true"></span>
    </div>

      <div class="navbar-collapse collapse" id="full-circle-navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'New Goal', new_goal_path %></li>
          <li><%= link_to 'Your Goals', goals_list_users_path %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <p class="navbar-text">Hello, <%= current_user.first_name %></p>
            </li>
            <li>
              <%= button_to 'Sign out',
                sessions_path,
                method: :delete,
                class: 'btn btn-default navbar-btn'
                %>
              </li>
            <li><%= link_to 'Update Password', edit_password_path(current_user)%></li>
          <% else %>
            <li><%= link_to 'Sign up with Email', new_user_path %></li>
            <li><%= link_to 'Sign In', new_session_path %></li>
            <li><%= link_to 'Sign In with Twitter', sign_in_with_twitter_path %></li>
            <li><%= link_to 'Sign In with Facebook', sign_in_with_facebook_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

    <div class="container-fluid">
      <% if notice || alert %>
        <div
          class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable"
          role="alert">
          <%= notice || alert %>
          <%# add x button to close notification element %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
